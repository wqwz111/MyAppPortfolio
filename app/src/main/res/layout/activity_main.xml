<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.myappportfolio.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/btn_pm"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignEnd="@+id/btn_myam"
        android:layout_alignStart="@+id/btn_myam"
        android:background="#2E3D49"
        android:textColor="#fdfbfb"
        android:onClick="showToastPopularMovie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/btn_sh"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_pm"
        android:layout_alignEnd="@+id/btn_pm"
        android:layout_alignStart="@+id/btn_pm"
        android:background="#2E3D49"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_bib"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_sh"
        android:layout_alignStart="@+id/btn_sh"
        android:layout_alignEnd="@+id/btn_sh"
        android:textColor="#ffffff"
        android:background="#2E3D49" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKEY YOUR APP MATERIAL"
        android:id="@+id/btn_myam"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_bib"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/btn_gu"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_below="@+id/btn_myam"
        android:layout_alignStart="@+id/btn_myam"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/btn_myam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/btn_c"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_below="@+id/btn_gu"
        android:layout_alignStart="@+id/btn_gu"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/btn_gu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="#030303"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
